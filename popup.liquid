    // Configuraci贸n del cron贸metro de 3 horas
    var countdownTime = 3 * 60 * 60; // 3 horas en segundos
    var countdownElement = document.getElementById('countdown-timer');

    function updateCountdown() {
      var hours = Math.floor(countdownTime / 3600);
      var minutes = Math.floor((countdownTime % 3600) / 60);
      var seconds = countdownTime % 60;

      countdownElement.textContent = 'Oferta v谩lida por: ' + hours.toString().padStart(2, '0') + ':' + minutes.toString().padStart(2, '0') + ':' + seconds.toString().padStart(2, '0');

      if (countdownTime > 0) {
        countdownTime--;
        setTimeout(updateCountdown, 1000);
      } else {
        countdownElement.textContent = 'La oferta ha expirado.';
      }
    }

    updateCountdown();
  });
</script>
